.sign-in-box
  %h2 Resend confirmation instructions
  = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f|
    = devise_error_messages!
    .control-group.extra-top-padding
      = f.label :login, class: 'control-label'
      .controls
        = f.text_field :login
    = f.submit "Resend confirmation instructions", class: 'sign-in-submit btn btn-default'
  .devise-links
    = render "devise/shared/links"