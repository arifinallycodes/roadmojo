#topnavbg
  #topnavcontainer
    =render "layouts/facebook_hash"
    /=render "layouts/navbar"
    -if current_user
      =render 'layouts/main_header'
    -else
      =render 'layouts/header'
-if user_signed_in?
  .container
    =render "layouts/flash_messages"
    =yield
-else
  .container.full-height-landing-page
    =render "layouts/flash_messages"
    =yield
/ -if !user_signed_in? and request.fullpath != '/home/faq'
-if !user_signed_in? and request.fullpath == '/'
  %a.scoll-down-to-home-level{href: '#'}
    =image_tag 'landing_page/arrow_down.png'
  #home-level2
    #home-level2-inner
      #home-level2-panel1
        .home-level2-box-heading What is RoadMojo?
