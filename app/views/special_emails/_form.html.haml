= form_for @special_email do |f|
  - if @special_email.errors.any?
    #error_explanation
      %h2= "#{pluralize(@special_email.errors.count, "error")} prohibited this special_email from being saved:"
      %ul
        - @special_email.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
