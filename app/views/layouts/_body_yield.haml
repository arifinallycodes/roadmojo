          %object{:height => "198", :width => "317"}
            %param{:name => "movie", :value => "http://www.youtube.com/v/cuv-KsZfbeE?hl=en_GB&amp;version=3"}
            %param{:name => "allowFullScreen", :value => "true"}
            %param{:name => "allowscriptaccess", :value => "always"}
            %iframe{:allowfullscreen => "", :frameborder => "0", :height => "200", :src => "//www.youtube.com/embed/b-HtMzn2hA0", :width => "325"}
            / %embed{:allowfullscreen => "true", :allowscriptaccess => "always", :height => "198", :src => "http://www.youtube.com/v/cuv-KsZfbeE?hl=en_GB&amp;version=3", :type => "application/x-shockwave-flash", :width => "317"}
        .home-level2-normal-text
          %p 
      #home-level2-panel2
        .home-level2-box-heading Featured trip
        .home-level2-picture-videobox
          %a{:href => "http://roadmojo.com/arijit/trips/winter-iceland-trip-in-search-of-the-northern-lights"}
            =image_tag 'feature-trip.jpg', height: "198", border: "0", width: "317"
